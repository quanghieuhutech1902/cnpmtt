@model CongNghePhanMemTienTien.DataContext.Lop

@{
    ViewBag.Title = "CHỈNH SỬA THÔNG TIN LỚP";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>CHỈNH SỬA THÔNG TIN LỚP - @Model.TenLop.ToUpper() (@Model.MaLop.ToUpper())</h2>

@using (Html.BeginForm("Edit", "Lops", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.ID)
        @Html.HiddenFor(model => model.HinhDaiDien)

        <div class="form-group">
            @Html.Label("TÊN LỚP", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.TenLop, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("MÃ LỚP", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.MaLop, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>
        <div class="form-group">
            @Html.Label("KHOA", "KHOA", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("KhoaID", null, htmlAttributes: new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            @Html.Label("FACEBOOK LỚP", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Link, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>
        <div class="form-group">
            @Html.Label("LOGO LỚP", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <img src="@Model.HinhDaiDien" class="img-responsive" />
            </div>
        </div>
        <div class="form-group">
            @Html.Label("THAY ĐỔI LOGO LỚP", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input type="file" class="form-control" name="Logo" />
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="LƯU LẠI" style="margin-left:1px !important" class="btn btn-success" />
                <a href="/quan-ly/lop" class="btn btn-danger"> HỦY</a>
            </div>
        </div>
    </div>
}