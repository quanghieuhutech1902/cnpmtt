@model CongNghePhanMemTienTien.DataContext.MonHoc

@{
    ViewBag.Title = "CHỈNH SỬA THÔNG TIN MÔN HỌC";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="breadcrumbs">
    <div class="breadcrumbs-inner" style="margin-left: -17px;margin-bottom: 34px;background:transparent">
        <div class="row col-lg-12">
            <p style="font-size:x-large">CHỈNH SỬA THÔNG TIN MÔN HỌC - @Model.TenMonHoc.ToUpper()</p>
        </div>
    </div>
</div>

@using (Html.BeginForm("Edit", "MonHocs", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.ID)
        @Html.HiddenFor(model => model.Logo)

        <div class="form-group">
            @Html.Label("TÊN MÔN HỌC", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.TenMonHoc, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("MÃ MÔN HỌC", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.MaMonHoc, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("NGÀNH", "NGÀNH", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("NganhID", null, htmlAttributes: new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            @Html.Label("THAY ĐỔI LOGO", htmlAttributes: new { @class = "control-label col-md-3" })
            <div class="col-md-10">
                <img src="@Model.Logo" class="img-responsive" />
            </div>
        </div>
        <div class="form-group">
            @Html.Label("THAY ĐỔI LOGO", htmlAttributes: new { @class = "control-label col-md-3" })
            <div class="col-md-10">
                <input type="file" class="form-control" name="Logo" />
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="LƯU LẠI" style="margin-left:1px !important" class="btn btn-success" />
                <a href="/quan-ly/mon-hoc" class="btn btn-danger"> HỦY</a>
            </div>
        </div>
    </div>
}