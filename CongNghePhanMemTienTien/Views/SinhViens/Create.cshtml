@model CongNghePhanMemTienTien.DataContext.SinhVien

@{
    ViewBag.Title = "THÊM MỚI SINH VIÊN";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="breadcrumbs">
    <div class="breadcrumbs-inner" style="margin-left: -17px;margin-bottom: 34px;background:transparent">
        <div class="row col-lg-12">
            <p style="font-size:x-large">THÊM MỚI SINH VIÊN</p>
        </div>
    </div>
</div>

@using (Html.BeginForm("Create", "SinhViens", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.Label("TÊN SINH VIÊN", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.TenSinhVien, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div> 

        <div class="form-group">
            @Html.Label("MÃ SỐ SINH VIÊN", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.MaSinhVien, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>  
        <div class="form-group">
            @Html.Label("SỐ ĐIỆN THOẠI", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.SoDienThoai, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("EMAIL", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>  
        <div class="form-group">
            @Html.Label("LỚP", "LỚP", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("LopID", null, htmlAttributes: new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            @Html.Label("CHUYÊN NGÀNH", "CHUYÊN NGÀNH", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("ChuyenNganhID", null, htmlAttributes: new { @class = "form-control" })
            </div>
        </div> 
        <div class="form-group">
            @Html.Label("PHỤ HUYNH", "PHỤ HUYNH", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("PhuHuynhID", null, htmlAttributes: new { @class = "form-control" })
            </div>
        </div> 
        <div class="form-group">
            @Html.Label("HÌNH ĐẠI DIỆN", htmlAttributes: new { @class = "control-label col-md-3" })
            <div class="col-md-10">
                <input type="file" class="form-control" name="Logo" />
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="LƯU LẠI" style="margin-left:1px !important" class="btn btn-success" />
                <a href="/quan-ly/sinh-vien" class="btn btn-danger"> HỦY</a>
            </div>
        </div>
    </div>
}
